<% if @todolist.errors.present? %>
  <ul>
    <% @todolist.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize} #{message}" %></li>
    <% end %>
  </ul>
<% end %>

<div class ="form container">
  <%= form_for @todolist do |f|  %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :due_date %>
      <%= f.text_field :due_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :note %>
      <%= f.text_area :note, class: "form-control" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>